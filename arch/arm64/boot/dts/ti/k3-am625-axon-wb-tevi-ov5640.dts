/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>

/ {
	fragment@101 {
		target-path = "/";

		__overlay__ {
			clk_ov5640_fixed: ov5640-xclk {
				compatible = "fixed-clock";
				#clock-cells = <0>;
				clock-frequency = <24000000>;
			};
		};
	};
};

/* I2C_B */
&main_i2c2 {
	#address-cells = <1>;
	#size-cells = <0>;

	ov5640_otp_0: eeprom@54 {
		compatible = "atmel,24c64";
		reg = <0x54>;
		read-only;
	};

	ov5640: camera@3c {
		compatible = "ovti,ov5640";
		reg = <0x3c>;
		pinctrl-names = "default";
		pinctrl-0 = <&main_gpio1_csi_ctrl_pins_default>;

		clocks = <&clk_ov5640_fixed>;
		clock-names = "xclk";

		powerdown-gpios = <&ioexp21 2 GPIO_ACTIVE_HIGH>;
		reset-gpios = <&main_gpio1 24 GPIO_ACTIVE_LOW>; /* CSI_nRST, GPIO_X3_P65 */
		nvmem = <&ov5640_otp_0>;
		nvmem-names = "calib-data";

		port {
			csi2_cam0: endpoint {
				remote-endpoint = <&csi2rx0_in_sensor>;
				clock-lanes = <0>;
				data-lanes = <1 2>;
			};
		};
	};
};

&csi0_port0 {
	status = "okay";

	csi2rx0_in_sensor: endpoint {
		remote-endpoint = <&csi2_cam0>;
		bus-type = <4>; /* CSI2 DPHY. */
		clock-lanes = <0>;
		data-lanes = <1 2>;
	};
};
