/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/interrupt-controller/irq.h>


/ {
	fragment@101 {
		target-path = "/";

		__overlay__ {
			reg_lvds_pwr: regulator_lvdspwr {
				compatible = "regulator-fixed";
				pinctrl-names = "default";
				pinctrl-0 = <&main_gpio0_lvds_pwr_pins_default>;
				regulator-name = "LVDS_VLED_EN";
				regulator-min-microvolt = <3300000>;
				regulator-max-microvolt = <3300000>;
				gpio = <&main_gpio0 33 GPIO_ACTIVE_HIGH>;
				enable-active-high;
			};

			lvds_backlight: lvds_backlight {
				compatible = "pwm-backlight";
				pinctrl-names = "default";
				pinctrl-0 = <&main_gpio0_lvds_backlight_pwr_pins_default>;
				enable-gpios = <&main_gpio0 39 GPIO_ACTIVE_HIGH>;
				power-supply = <&pwr_5v>;
				pwms = <&epwm1 1 50000 0>;
				brightness-levels = <7 255>;
				num-interpolated-steps = <248>;
				default-brightness-level = <100>;
			};

			lvds_panel {
				compatible = "vxt,vl156192108", "panel-lvds";
				backlight = <&lvds_backlight>;
				power-supply = <&reg_lvds_pwr>;

				data-mapping = "vesa-24";
				height-mm = <193>;
				width-mm = <344>;

				panel-timing {
					clock-frequency = <141860000>;
					hactive = <1920>;
					vactive = <1080>;
					vback-porch = <10>;
					vfront-porch = <10>;
					hback-porch = <35>;
					hfront-porch = <34>;
					vsync-len = <10>;
					hsync-len = <35>;
					de-active = <1>;
				};

				/*
				* Note that the OLDI TX 0 transmits the odd set of pixels
				* while the OLDI TX 1 transmits the even set. This is a
				* fixed configuration in the IP integration and is not
				* changeable. The properties, "dual-lvds-odd-pixels" and
				* "dual-lvds-even-pixels" have been used to merely
				* identify if a Dual Link configuration is required.
				* Swapping them will not make any difference.
				*/
				port@0 {
					dual-lvds-odd-pixels;
					panel_lvds_in0: endpoint {
						remote-endpoint = <&oldi_out0>;
					};
				};

				port@1 {
					dual-lvds-even-pixels;
					panel_lvds_in1: endpoint {
						remote-endpoint = <&oldi_out1>;
					};
				};
			};
		};
	};
};

&dss_ports {
	#address-cells = <1>;
	#size-cells = <0>;

	/* VP1: LVDS Output (OLDI TX 0) */
	port@0 {
		reg = <0>;
		oldi_out0: endpoint {
			remote-endpoint = <&panel_lvds_in0>;
		};
	};

	/* VP1: LVDS Output (OLDI TX 1) */
	port@2 {
		reg = <2>;
		oldi_out1: endpoint {
			remote-endpoint = <&panel_lvds_in1>;
		};
	};
};

/* I2C_C */
&main_i2c2 {
	#address-cells = <1>;
	#size-cells = <0>;

	exc81w60: touchscreen@2a {
		compatible = "eeti,exc80h60";
		reg = <0x2a>;
		pinctrl-names = "default";
		pinctrl-0 = <&main_gpio1_touch_intr_pins_default &mcu_gpio0_touch_nrst_pins_default>;
		reset-gpios = <&mcu_gpio0 1 GPIO_ACTIVE_LOW>; /* TOUCH_nRST, SPI_B_CS1 */
		interrupt-parent = <&main_gpio1>; /* TOUCH_nINT, GPIO_X2_P24 */
		interrupts = <25 IRQ_TYPE_EDGE_FALLING>;
	};
};
